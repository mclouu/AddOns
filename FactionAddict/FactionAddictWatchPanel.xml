<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\..\FrameXML\UI.xsd">

	<Frame name="frameFactionAddictWatchFrame" enableMouse="true" hidden="true" movable="true" parent="UIParent" resizable="true" inherits="BackdropTemplate">
		<Size>
			<AbsDimension x="270" y="225"/>
		</Size>
		<Anchors>
			<Anchor point="TOPLEFT" relativeTo="frameFactionAddictInfoFrame" relativePoint="BOTTOMLEFT">
				<Offset>
					<AbsDimension x="0" y="-15"/>
				</Offset>
			</Anchor>
		</Anchors>
		<ResizeBounds>
			<minResize>
				<AbsDimension x="100" y="50"/>
			</minResize>
			<maxResize>
				<AbsDimension x="600" y="400"/>
			</maxResize>
		</ResizeBounds>
		<Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
			<BackgroundInsets>
				<AbsInset left="3" right="3" top="3" bottom="3"/>
			</BackgroundInsets>
			<TileSize>
				<AbsValue val="32"/>
			</TileSize>
			<EdgeSize>
				<AbsValue val="8"/>
			</EdgeSize>
		</Backdrop>
		<Layers>
			<Layer level="ARTWORK">
				<FontString name="$parent_txt1" parentKey="txt1" inherits="SystemFont_Large" justifyH="CENTER" text="22123 / 42000">
					<Anchors>
						<Anchor point="TOP" relativeTo="$parent" relativePoint="TOP" x="0" y="-5"/>
					</Anchors>
					<Color r="1" g="1" b="1"/>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Button inherits="UIPanelCloseButton">
				<Anchors>
					<Anchor point="TOPRIGHT">
						<Offset>
							<AbsDimension x="3" y="3"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						self:SetAlpha(0.3);
					</OnLoad>
					<PostClick>
						PlaySound(SOUNDKIT.IG_INVENTORY_ROTATE_CHARACTER);
					</PostClick>
				</Scripts>
			</Button>
			<Button name="$parentResizeButton" parentKey="resizeButton">
				<Size x="16" y="16"/>
				<Anchors>
					<Anchor point="BOTTOMRIGHT" relativeTo="$parent">
						<Offset>
							<AbsDimension x="0" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnMouseDown>
						local Frame = self:GetParent();
						self:SetButtonState("PUSHED", true);
						self:GetHighlightTexture():Hide();
						Frame:StartSizing("BOTTOMRIGHT");
					</OnMouseDown>
					<OnMouseUp>
						self:SetButtonState("NORMAL", false);
						self:GetHighlightTexture():Show();
						self:GetParent():StopMovingOrSizing();
					</OnMouseUp>
				</Scripts>
				<NormalTexture file="Interface\ChatFrame\UI-ChatIM-SizeGrabber-Up"/>
				<HighlightTexture file="Interface\ChatFrame\UI-ChatIM-SizeGrabber-Highlight"/>
				<PushedTexture file="Interface\ChatFrame\UI-ChatIM-SizeGrabber-Down"/>
			</Button>
		</Frames>
		<Scripts>
			<OnLoad>
				self:RegisterForDrag("LeftButton");
				self:SetBackdropBorderColor(.6, .6, .6, .4);
				self:SetBackdropColor(.6, .6, .6, .7);
			</OnLoad>
			<OnDragStart>self:StartMoving()</OnDragStart>
			<OnDragStop>self:StopMovingOrSizing()</OnDragStop>
		</Scripts>
	</Frame>
	
</Ui>